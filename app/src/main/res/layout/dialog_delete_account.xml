<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/round_text_button"
    android:backgroundTint="@color/white">

    <TextView
        android:id="@+id/dialog_delete_account_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_20sp"
        android:fontFamily="@font/nanumbarungothic_400"
        android:text="정말로 탈퇴하시겠어요?"
        android:textColor="@color/black"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/dialog_delete_account_delete_cv"
        android:layout_width="255dp"
        android:layout_height="65dp"
        app:cardBackgroundColor="@color/gray"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        android:layout_marginTop="@dimen/margin_30dp"
        app:layout_constraintTop_toBottomOf="@id/dialog_delete_account_title_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/dialog_delete_account_delete_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_18sp"
            android:fontFamily="@font/nanumbarungothic_400"
            android:text="탈퇴하기"
            android:textColor="@color/indigo"
            android:layout_gravity="center"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/dialog_delete_account_cancel_cv"
        android:layout_width="255dp"
        android:layout_height="65dp"
        app:cardBackgroundColor="@color/main"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        android:layout_marginTop="@dimen/margin_30dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintTop_toBottomOf="@id/dialog_delete_account_delete_cv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/dialog_delete_account_cancel_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_18sp"
            android:fontFamily="@font/nanumbarungothic_400"
            android:text="취소"
            android:textColor="@color/white"
            android:layout_gravity="center"/>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>