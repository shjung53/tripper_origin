<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingVertical="@dimen/margin_10dp">

    <LinearLayout
        android:id="@+id/follower_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/margin_20dp"
        android:gravity="center_vertical">



        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/follower_profile_iv"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/ic_empty_profile"/>

        <TextView
            android:id="@+id/follower_nickname_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="닉네임"
            android:fontFamily="@font/nanumbarungothic_400"
            android:textSize="@dimen/text_12sp"
            android:layout_marginStart="12dp"
            android:textColor="@color/black"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/follower_delete_btn"
            android:visibility="invisible"
            android:layout_width="54dp"
            android:layout_height="30dp"
            android:background="@drawable/round_text_button_stroke_main_color"
            android:text="삭제"
            android:fontFamily="@font/nanumbarungothic_400"
            android:textSize="@dimen/text_12sp"
            android:textColor="@color/lightBlack"
            android:outlineProvider="none"/>


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>