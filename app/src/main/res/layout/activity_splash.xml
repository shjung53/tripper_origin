<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tripper.tripper.ui.splash.SplashActivity">

    <ImageView
        android:id="@+id/splash_logo_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_signature_206dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.45"
        android:paddingBottom="20dp"
        />
    <TextView
        android:id="@+id/splash_text_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="모두의 여행 이야기 , 트리퍼"
        android:textSize="@dimen/text_20sp"
        android:textColor="@color/lightBlack"
        android:fontFamily="@font/nanumbarungothic_400"
        app:layout_constraintTop_toBottomOf="@id/splash_logo_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>